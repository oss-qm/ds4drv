#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --with python2

build-python%:
	python$* setup.py build

install-python%:
	python$* setup.py install \
		 --install-layout=deb \
		 --root=$(CURDIR)/debian/tmp \
		 --force

override_dh_auto_build:
	dh_auto_build

override_dh_auto_install:
	dh_auto_install

override_dh_auto_clean:
	dh_auto_clean
	-rm -rf build
	-rm -rf *.egg-info
	-rm evdev/ecodes.c
